pipeline {
    agent any
    
    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning repository...'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building project...'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}
