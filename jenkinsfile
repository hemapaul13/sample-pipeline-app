pipeline {
    agent any

    tools {
        nodejs "NodeJS 18"  // Ensure this matches the Node version installed in Jenkins global tools
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm start &'
                sleep time: 5, unit: 'SECONDS'
                sh 'curl http://localhost:3000'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
